{
    "name": "precision-image-studio",
    "version": "1.0.2",
    "description": "Precision Image Studio Master Edition",
    "author": "OrderliSS",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win",
        "build:mac": "electron-builder --mac"
    },
    "build": {
        "appId": "com.orderliss.precisionimagestudio",
        "productName": "Precision Image Studio",
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.graphics-design",
            "hardenedRuntime": false
        }
    },
    "devDependencies": {
        "electron": "^30.0.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "@imgly/background-removal": "^1.7.0",
        "colorthief": "^2.6.0"
    }
}